{
  "name": "ecommerce-platform",
  "version": "1.0.0",
  "description": "Production-grade single-vendor e-commerce platform inspired by WooCommerce",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel -r dev",
    "dev:api": "pnpm --filter api dev",
    "dev:admin": "pnpm --filter admin dev",
    "dev:storefront": "pnpm --filter storefront dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "seed": "pnpm --filter api seed"
  },
  "keywords": ["ecommerce", "shop", "woocommerce", "typescript", "react", "express", "mongodb"],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "typescript": "^5.3.3"
  }
}
